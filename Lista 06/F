using System; 

public class Exercicios
{
    public static void Main()
    {
    	//Crie um programa que permita ao usuário inserir um número inteiro e exiba
        //uma mensagem informando se o número é positivo, negativo ou zero.
    	
    	Console.WriteLine("Digite um número inteiro:");
    	int num = int.Parse(Console.ReadLine());
    	
    	switch (Math.Sign(num)){
    			
    		case -1:
    			Console.WriteLine("Esse número é NEGATIVO");
    			break;
    			
    		case 1:
    			Console.WriteLine("Esse número é POSITIVO");
    			break;
    			
    		case 0:
    			Console.WriteLine("Esse número é ZERO");
    			break;
    	}
 
        Console.WriteLine("");
        Console.WriteLine("Pressione qualquer tecla para fechar.");
        Console.ReadKey();
    }
}
