using System;

namespace Exercicios
{ 
	class Program 
	{
		public static void Main()
		{
			
         //Desenvolva um programa que solicite ao usuário para inserir um número
         //inteiro e, em seguida, exiba a tabuada desse número até o número 10.
          
         Console.WriteLine("Insira um número inteiro:");
             int num = int.Parse(Console.ReadLine());
             
             Console.WriteLine("Tabuada do " + num + ":");
             
             int contador = 1;   	         
          
             while (contador <= 10){
             	
             	Console.WriteLine (num + " * " + contador + " = " + num*contador);
             	contador +=1;    	
             }
         
          
        Console.WriteLine("");
        Console.WriteLine("Pressione qualquer tecla para fechar.");
        Console.ReadKey();  
			
		}
	}
}
